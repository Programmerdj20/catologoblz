---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Catálogo de Joyería - Oro Laminado 18K",
  description = "Descubre nuestra colección exclusiva de joyería en oro laminado 18K. Rosarios, anillos y accesorios de alta calidad."
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <meta name="description" content={description}>
  
  <!-- SEO Meta Tags -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content="website">
  <meta property="og:image" content="/assets/banner-joyeria.svg">
  
  <!-- Favicon -->
  <link rel="icon" type="image/jpeg" href="/favicon.jpeg">
  <link rel="apple-touch-icon" href="/favicon.jpeg">
  
  <!-- Preload critical fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <slot />
  
  <!-- Analytics placeholder -->
  <script>
    // Google Analytics o similar aquí
    console.log('Jewelry Catalog loaded');
  </script>
</body>
</html>